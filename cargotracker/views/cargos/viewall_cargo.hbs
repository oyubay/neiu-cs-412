<div class="container-fluid">
    <div class = "row row-cols-8 justify-content-center">
        <div class="col-8 col-md-5 btn-group-vertical" role="group">
            {{#each cargoList}}
                <div class="row btn-group">
                    <a class="col-8 justify-content-center mt-3 btn btn-lg btn-block btn-outline-info"
                       href = "/cargos/view?id={{id}}">To {{to_name}} </a>
                    <a class="col-2 mt-3 btn btn-sm btn-block btn btn-outline-info" href="/cargos/edit?id={{id}}"><i data-feather="edit"></i></a>
                    <a class="col-2 mt-3 btn btn-sm btn-block btn btn-outline-info" data-toggle="modal" data-target="#deleteModal"><i data-feather="trash-2"></i></a>
                </div>

                <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this cargo information?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <a href="/cargos/destroy?id={{id}}">
                                <button type="button" class="btn btn-info">Yes</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>


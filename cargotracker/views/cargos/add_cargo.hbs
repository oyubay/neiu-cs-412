
<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <h2>Send a cargo</h2>
    </div>
</div>
<div class="container-fluid m-2">
    {{>user_messages}}
</div>
<form class = "edit" method="post" action="/cargos/save">
    <div class="container-fluid ">
        <input type = "hidden" name="saveMethod"
               value="{{#if isCreate}}create{{else}}update{{/if}}"/>

        <div class="row">
            <div class="col-sm-6 float-left">
                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="from_name">Sender name:</label>
                    </div>
                    <div class="col-7">
                        <input class="form-control" type = "text" name="from_name"  value="{{cargoFromName}}"/><br/>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="from_number">Sender phone number:</label>
                    </div>
                    <div class="col-7">
                        <input class="form-control" type = "number" name="from_number" required minlength="10" value="{{cargoFromNumber}}"/><br/>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="from_address">Sender address:</label>
                    </div>
                    <div class="col-7">
                        <input class="form-control" type = "text" name="from_address" required /><br/>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 float-right" >
                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="to_name">Receiver name:</label>
                    </div>
                    <div class="col-7">
                        <input class="form-control" type = "text" name="to_name"required pattern="[A-Za-z]{2,}"/><br/>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="to_number">Receiver number:</label>
                    </div>
                    <div class="col-7">
                        <input class="form-control" type = "number" name="to_number" required minlength="10"/><br/>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="to_address">Receiver address:</label>
                    </div>
                    <div class="col-7">
                        <input class="form-control" type = "text" name="to_address"required /><br/>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 float-left" >
                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="cargo_type">Cargo type:</label>
                    </div>
                    <div class="col-7">
                        <input type = "radio" name="cargo_type" id="air-transport" value="air-transport"/>Air transport<br/>
                        <input  type = "radio" name="cargo_type" id="auto-transport" value="auto-transport"/>Auto transport<br/>
                    </div>
                </div>
            </div>
            <div class="col-md-4 float-left" >
                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="size">Cargo size(lb):</label>
                    </div>
                    <div class="col-7">
                        <input class="form-control" type="number" name="size" required/><br/>
                    </div>
                </div>
            </div>
            <div class="col-md-4 float-left" >
                <div class="form-group row justify-content-center">
                    <div class="col-5 text-right font-weight-bold">
                        <label class="col-form-label" for="price">Cargo price($):</label>
                    </div>
                    <div class="col-7">
                        <input class="form-control" type="number" step="0.01" name="price" required/><br/>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" name="cargoDate" value="{{cargoDate}}"/>

        <div class="form-group row justify-content-center">
            <div class="col-2 text-right font-weight-bold">
                <label class="col-form-label" for="items">Cargo items:</label>
            </div>
            <div class="col-10">
                <textarea class="form-control" rows=5 name="items" required></textarea><br/>
            </div>
        </div>
        <div class="form-group row justify-content-center ">
            <input class="col-3 btn-outline-info btn-md btn btn-block" type="submit" value="Save"/>
        </div>
    </div>
</form>

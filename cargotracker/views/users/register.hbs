<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <h2>Register</h2>
    </div>
</div>
<div class="container-fluid m-2">
    {{>user_messages}}
</div>
<form method="post", action="/users/register">
    <div class="container-fluid">
        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="firstName">First Name: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="firstName" type="text" name="first" required pattern="[A-Za-z]{2,}"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="lastName">Last Name: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="lastName" type="text" name="last" required pattern="[A-Za-z]{2,}"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="phoneNumber">Phone Number: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="phoneNumber" type="number" name="phoneNumber" required minlength="10"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="email">Email: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="email" type="email" name="email" required
                       pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="password">Password: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="password" type="password" name="password" required minlength="8"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="col-1 btn-outline-info btn" type="submit" value="Register"/>
        </div>
    </div>
</form>

<div class="container-fluid">
    <div class = "row row-cols-8 justify-content-center">
        <div class="col-8 col-md-5" role="group" >
            <table class="table">
                <tbody>
                <tr>
                    <td> First name: </td>
                    <td> {{firstName}}</td>
                </tr>
                <tr>
                    <td> Last name </td>
                    <td> {{lastName}}</td>
                </tr>
                <tr>
                    <td>Phone number: </td>
                    <td> {{phone}} </td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td> {{email}}</td>
                </tr>
                <tr>
                    <td>View all cargo: </td>
                    <td> <a href="../cargos/viewall/">Click Here</a> </td>
                </tr>
                </tbody>
            </table>
            <div class="row text-right">
                <a class="btn btn-outline-info col-md-6" href="/user/edit?id={{id}}">Edit<i class="edit_icon"  data-feather="edit"></i></a>
                <a class="btn btn-outline-info col-md-6 float-right"data-toggle="modal"
                   data-target="#deleteModal"">Delete<i class="edit_icon" data-feather="trash-2"></i></a>
            </div>
        </div>
    </div>
</div>

<!--Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this cargo information?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a href="/cargos/destroy?id={{id}}">
                <button type="button" class="btn btn-info">Yes</button>
                </a>
            </div>
        </div>
    </div>
</div>

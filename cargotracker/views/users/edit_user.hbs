<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <h2>Register</h2>
    </div>
</div>
<div class="container-fluid m-2">
    {{>user_messages}}
</div>
<form method="post", action="/users/register">
    <div class="container-fluid">
        <input type = "hidden" name = "saveMethod"
               value="{{#if isCreate}}create{{else}}update{{/if}}"/>
        <input type="hidden" name="id" value="{{id}}"/>
        <input type="hidden" name="password" value="{{password}}"/>
        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="firstName">First Name: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="firstName" type="text" name="first" required pattern="[A-Za-z]{2,}", value="{{firstName}}"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="lastName">Last Name: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="lastName" type="text" name="last" required pattern="[A-Za-z]{2,}", value="{{lastName}}"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="phoneNumber">Phone Number: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="phoneNumber" type="number" name="phoneNumber" required minlength="10" value="{{phoneNumber}}"/><br/>
            </div>
        </div>
        <input class="form-control" id="email" type="hidden" name="email" value="{{email}}"/><br/>
        <div class="form-group row justify-content-center">
            <input class="col-3 btn-outline-info btn btn-md btn-block" type="submit" value="Save"/>
        </div>
    </div>
</form>

<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <h2>Login</h2>
    </div>
</div>
<div class="container-fluid m-2">
    {{>user_messages}}
</div>

<form method="post", action="/users/login">
    <div class="container-fluid">
        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="email">Email: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="email" type="email" name="email" required/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-0">
            <div class="col-9 col-md-2 text-left font-weight-bold">
                <label class="col-form-label" for="password">Password: </label>
            </div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="password" type="password" name="password" required/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="col-3 btn-outline-info btn-md btn btn-block" type="submit" value="Login"/>
        </div>
    </div>
</form>

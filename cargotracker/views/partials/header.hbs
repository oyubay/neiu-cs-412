<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-info border">
        <a class="navbar-brand" href="/"><i data-feather="home"></i></a>
        <button class="navbar-toggler" type="button"
            data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle Navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <span class="navbar-text col text-left">{{caption}}</span>
            {{#unless loggedIn}}
                <a class="nav-item nav-link btn btn-light col-auto" href="/users/register">Register</a>
                <a class="nav-item nav-link btn btn-light col-auto" href="/users/login">Login</a>
            {{else}}
                <div class="dropdown">
                    <span class=" dropdown-toggle col-auto text-white" type="button"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{currentUser.fullName}}
                    </span>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/users/view?id={{currentUser.id}}">View profile</a>
                        <a class="dropdown-item" href="/users/logout">Logout</a>
                    </div>
                </div>
                <a class="nav-item nav-link btn btn-light col-auto" href="/cargos/add">Send a cargo</a>
                <a class="nav-item nav-link btn btn-light col-auto" href="/cargos/viewall">All cargos</a>
            {{/unless}}
        </div>
    </nav>

</header>
